#include <iostream>
using namespace std;
int main()
{
    float A[5][5], B[5][5];
    int count=0, count1;
    for(int i = 0; i < 5; i++)
    {
        float *a = A[i];
        for (int j = 0; j < 5; j++)
        {
            *(a+j)=rand()%20-10;
            cout<<*(a+j)<<" ";
            if( *(a+j) > 0)
            {
                count++;
            }
        } 
        cout<<"   Amount of positive numbers : "<< count << endl;
        count = 0;
    }
    cout<<endl;
    for(int i = 0; i < 5; i++)
    {
        float *a = A[i], *b=B[i];
        for (int j = 0; j < 5; j++)
        {
            *(b+j)=*(a+j+1);
            if( *(a+j) > 0 )
            {
                count++;
            }
            if (j == 4)
            {
                *(b+j)=count;
            }
            cout<<*(b+j)<<" ";
        } 
        cout<<endl;
        count = 0;
    }
    return 0;
}
